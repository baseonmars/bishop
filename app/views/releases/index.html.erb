<h1>Listing releases</h1>

<table cellpadding="4" border="1">
  <tr>
    <th>Updated at</th>
    <th>Created at</th>
    <th>Name</th>
    <th colspan="3">Comments</th>
  </tr>

<% for release in @releases %>
  <tr>
    <td><%=h release.updated_at %></td>
    <td><%=h release.created_at %></td>
    <td><%=h release.name %></td>
    <td><%= link_to 'Edit', edit_release_path(release) %></td>
    <td><%= link_to 'Delete', release, :confirm => 'Are you sure?', :method => :delete %></td>
		<td><%= link_to 'Commits Listing', release_commits_path(release) %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to 'New release', new_release_path %></p>
