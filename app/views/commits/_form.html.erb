<%= error_messages_for :commit %>

<% form_for([@release, @commit]) do |f| %>
  <p>
    <b>Revision</b><br />
    <%= f.text_field :revision %>
  </p>

  <p>
    <b>User</b><br />
    <%= f.text_field :user %>
  </p>

  <p>
    <b>Date</b><br />
    <%= f.datetime_select :date %>
  </p>

  <p>
    <b>Files</b><br />
    <%= f.text_area :files %>
  </p>

  <p>
    <b>Comments</b><br />
    <%= f.text_area :comments %>
  </p>

  <p>
    <b>Changes</b><br />
    <%= f.text_area :changes_text %>
  </p>

  <p>
    <b>Status</b><br />
    <%= select :commit, :status, Commit.valid_statuses %>
		
  </p>

  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>